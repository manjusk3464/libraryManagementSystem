<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".utils.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone"
        app:srcCompat="@drawable/logo" />

<!--    <ImageView-->
<!--        android:id="@+id/imageView7"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="200dp"-->
<!--        android:layout_gravity="clip_horizontal"-->
<!--        android:layout_margin="20dp"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:foregroundGravity="center_vertical"-->
<!--        app:srcCompat="@drawable/librarylogin" />-->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="You want to login as "
        android:textColor="@color/colorLightDark"
        android:textSize="18sp" />


    <Button
        android:id="@+id/studentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_btn"
        android:text="student"
        android:textColor="@color/colorLightDark"
        android:textStyle="bold" />


    <Button
        android:id="@+id/adminBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_btn"
        android:text="admin"
        android:textColor="@color/colorLightDark"
        android:textStyle="bold" />


    <Button
        android:id="@+id/superAdminBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_btn"
        android:text="super admin"
        android:textColor="@color/colorLightDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/RegisterAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="Sign up"
        android:textSize="18sp" />


</LinearLayout>